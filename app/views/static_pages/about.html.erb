<!-- tab -->
<script type="text/javascript">
    (function() {
        $(function() {
            var aboutTabs = document.getElementsByClassName('about-tab');
            for(var i = 0; i < aboutTabs.length; i++) {
                aboutTabs[i].addEventListener('click', tabSwitchAbout);
            }

            function tabSwitchAbout() {
                document.getElementsByClassName('is-active-about')[0].classList.remove('is-active-about');
                this.classList.add('is-active-about');
                document.getElementsByClassName('is-show-about')[0].classList.remove('is-show-about');
                var arrayAboutTabs = Array.prototype.slice.call(aboutTabs);
                var index = arrayAboutTabs.indexOf(this);
                document.getElementsByClassName('about-page-content')[index].classList.add('is-show-about');
            }
        });
    })();
</script>