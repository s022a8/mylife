<div class="admin-history-index">
    <h3 style="font-weight:bold;"><%= @user.name %>の歴史一覧</h3>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th width="75%">出来事</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <% @histories.each do |history| %>
            <tr>
                <td><%= history.id %></td>
                <td width="75%"><%= history.event %></td>
                <td><%= link_to '詳細', admin_user_history_path(history.user.id, history.id) %></td>
                <td><%= link_to '削除', admin_user_history_path(history.user.id, history.id), method: :delete %></td>
            </tr>
        <% end %>
    </table>
</div>