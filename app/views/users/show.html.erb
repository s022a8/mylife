<div style="margin: 50px 0 250px">
    <div style="margin-bottom: 150px">
        <!--<h3 class="text-center" style="margin-bottom: 20px;">プロフィール</h3>-->

        <!-- リンク -->
        <div class="user-profile-links">
            <div class="container" style="width:100%;">
                <div class="row">
                    <div class="col-md-3 profile-link-col">
                        <%= link_to talks_path, class:"user-profile-link" do %>
                            <%= image_tag '/images/icon_112180_256.png', size:'25x25' %>
                            <span>トークルーム</span>
                        <% end %>
                    </div>

                    <div class="col-md-3 profile-link-col">
                        <%= link_to book_marks_path, class:"user-profile-link" do %>
                            <%= image_tag '/images/icon_159440_256.png', size:'25x25' %>
                            <span>ブックマーク</span>
                        <% end %>
                    </div>

                    <div class="col-md-3 profile-link-col">
                        <%= link_to user_histories_path(current_user.id), class:"user-profile-link" do %>
                            <%= image_tag '/images/icon_102260_256.png', size:'25x25' %>
                            <span>自分の歴史</span>
                        <% end %>
                    </div>

                    <div class="col-md-3 profile-link-col">
                        <%= link_to myquestion_path, class:"user-profile-link" do %>
                            <%= image_tag '/images/icon_113040_256.png', size:'25x25' %>
                            <span>マイアンケート</span>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>

        <!-- プロフィール -->
        <div>
            <div class="container user-profile" style="width:65%;">
                <div class="row">
                    <div class="col-md-offset-1 col-md-6">
                        <div class="profile-text">
                            <span class="profile-label">アカウント名</span>
                            <span class="profile-value"><%= @user.name %></span>
                        </div>

                        <div class="profile-text">
                            <span class="profile-label">メールアドレス</span>
                            <span class="profile-value"><%= @user.email %></span></span>
                        </div>

                        <div class="profile-text">
                            <span class="profile-label">タグ一覧</span>
                            <div class="profile-user-tags">
                                <% @user.part_list.each do |tag| %>
                                    <span class="profile-user-tag"><%= tag %></span>
                                <% end %>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-offset-1 col-md-4 text-center media-profile-image" style="margin: 18px 0 0;">
                        <!-- 画像表示エリア -->
                        <% if @user.profile_image.attached? %>
                            <%= image_tag @user.profile_image, size:'200x200', class:"profile-image" %>
                        <% else %>
                            <%= image_tag '/images/blank-profile-picture-973460_640.png', size:'200x200', class:"profile-image" %>
                        <% end %>
                    </div>
                </div>

                <div class="profile-edit-container">
                    <!-- turbolinks無効化 -->
                    <%= link_to 'プロフィールの編集', edit_user_registration_path, data: {"turbolinks": false}, class:"profile-edit-link" %>
                </div>
            </div>
        </div>
    </div>


    <div class="warning-container">
        <p>
            <%= image_tag '/images/icon_149640_256.png', size:'25x25', style:"margin-right:10px;" %>
            <%= link_to '会員をやめる', warning_users_path, class:"warning-text" %>
        </p>
    </div>
</div>
