<div class="admin-comment-index">
    <h3 style="font-weight:bold;"><%= @user.name %>のコメント一覧</h3>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th width="75%">内容</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <% @comments.each do |comment| %>
            <tr>
                <td><%= comment.id %></td>
                <td width="75%"><%= comment.body %></td>
                <td>
                    <%= link_to '出来事をみる', admin_user_history_path(comment.user.id, comment.history.id) %>
                </td>
                <td>
                    <%= link_to '削除', admin_user_comment_path(comment.user.id, comment.id), 
                        method: :delete, data: { confirm: "このコメントを削除しますか？" } %>
                </td>
            </tr>
        <% end %>
    </table>
</div>

<div class="admin-back-container">
    <h3>
        <%= link_to 'ユーザー詳細に戻る', admin_each_user_path(@user) %>
    </h3>
</div>